<div class="container text-center">
  <h1>The Burgers, Eat Them!</h1>
  <br>
  <form class="create-burger">
    <div class="form-group">
      <label for="burger"><b>Create Your Own:</b></label><br>
      <input type="text" id="burger-name" name="name"><br>
      <button class="btn-sm btn-danger" type="submit">Add Burger</button>
    </div>
  </form>
</div>

<br>

<div class="container">
  <div class="row">
    {{!-- <div class="col-1"></div> --}}
    <div class="col-4">
      <h2 class="text-center">Burgers to Devour</h2>

      <ul class="list-group list-group-flush">
        {{#each burgers }}
        {{#unless devoured }}
        <li class="list-group-item">
          {{ burger_name }}
          <button class='change-status badge badge-primary' data-id='{{id}}' data-newStatus='{{devoured}}'>
            DEVOUR IT!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4">
      <img src="https://media.giphy.com/media/evLdb1lb5rRKM/giphy.gif" class="rounded img-thumbnail">
    </div>
    
    <div class="col-4">
      <h2 class="text-center">Devoured Burgers</h2>

      <ul class="list-group list-group-flush">
        {{#each burgers }}
        {{#if devoured }}
        <li class="list-group-item">
          <s>{{ burger_name }}</s>
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
    {{!-- <div class="col-1"></div> --}}
  </div>

  

</div>